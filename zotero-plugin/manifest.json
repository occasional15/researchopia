{
  "manifest_version": 2,
  "name": "研学港 Researchopia",
  "version": "0.1.0",
  "description": "Integrates Researchopia (研学港) website into Zotero Item Pane for paper metrics and discovery.",
  "homepage_url": "https://www.researchopia.com",

  "applications": {
    "zotero": {
      "id": "researchopia@researchopia.com",
      "update_url": "https://www.researchopia.com/zotero/updates.json",
      "strict_min_version": "7.0",
      "strict_max_version": "*"
    },
    "gecko": {
      "id": "researchopia@researchopia.com",
      "strict_min_version": "78.0"
    }
  },

  "author": "Researchopia Team",

  "legacy": {
    "type": "bootstrap"
  },

  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "96": "icons/icon96.svg",
    "128": "icons/icon128.svg"
  }
}
