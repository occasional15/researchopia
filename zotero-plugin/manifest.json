{
  "manifest_version": 2,
  "name": "研学港 Researchopia - 智能标注分享",
  "version": "1.8.0",
  "description": "Integrates Researchopia (研学港) for paper metrics, discovery, and cross-platform annotation sharing with Zotero, Mendeley, and more.",
  "homepage_url": "https://www.researchopia.com",

  "applications": {
    "zotero": {
      "id": "researchopia@researchopia.com",
      "update_url": "https://www.researchopia.com/zotero/updates.json",
      "strict_min_version": "7.0",
      "strict_max_version": "*"
    }
  },

  "author": "Researchopia Team",

  "legacy": {
    "type": "bootstrap"
  },

  "permissions": [
    "storage",
    "http://localhost:3001/*",
    "http://127.0.0.1:3001/*"
  ],

  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg", 
    "48": "icons/icon48.svg",
    "96": "icons/icon96.svg",
    "128": "icons/icon128.svg"
  }
}
